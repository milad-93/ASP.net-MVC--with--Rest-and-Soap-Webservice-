            @Html.DisplayFor(modelItem => item.tel)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Utbildning)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Familj.familjnamn)
        </td>
        <td>
            @Html.ActionLink("Redigera", "Edit", new { id=item.personId }) |
            @Html.ActionLink("Detaljer", "Details", new { id=item.personId }) |
            @Html.ActionLink("Radera", "Delete", new { id=item.personId })
